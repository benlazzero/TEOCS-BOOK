/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
    Inc16(in=outer, out=incd);

    Mux16(a=outer, b=incd, sel=inc, out=incop);

    Mux16(a=incop, b=in, sel=load, out=out1); 

    Mux16(a=out1, b=false, sel=reset, out=res1);

    Register(in=res1, load=true, out=out, out=outer);
}
